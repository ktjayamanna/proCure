{
  "name": "clerk-chrome-extension",
  "displayName": "Clerk chrome extension",
  "version": "0.0.1",
  "description": "A basic Plasmo extension.",
  "author": "proCure",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@clerk/chrome-extension": "^2.2.28",
    "@plasmohq/storage": "^1.15.0",
    "plasmo": "0.90.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.4.1",
    "tldts": "^7.0.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "key": "$CRX_PUBLIC_KEY",
    "permissions": [
      "cookies",
      "storage",
      "tabs",
      "activeTab",
      "alarms"
    ],
    "host_permissions": [
      "http://localhost/*",
      "$CLERK_FRONTEND_API/*",
      "<all_urls>"
    ]
  }
}
